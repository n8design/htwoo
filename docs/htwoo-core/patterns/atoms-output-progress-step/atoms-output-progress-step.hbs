{{#progress-bar-step}}
<div class="hoo-progress-step"
    style="{{#if indicator-offset}}--indicator-offset: {{ indicator-offset}};{{/if}} {{#if step-offset }}--step-offset : {{ step-offset }};{{/if}}">
    <div class="inner">
        <div class="hoo-progress-step-indicator">
        </div>
        <div class="hoo-progress-step-label">
            {{ label }}
        </div>
    </div>
</div>
{{/progress-bar-step}}