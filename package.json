{
  "name": "htwoo",
  "private": true,
  "workspaces": [
    "htwoo-core",
    "htwoo-react",
    "packages/htwoo-core"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "nx run-many -t build",
    "build:clean": "tsc --build --clean",
    "build:force": "tsc --build --force",
    "typecheck": "nx run-many -t typecheck",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "nx run-many -t test",
    "graph": "nx graph",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:typecheck": "nx affected -t typecheck",
    "// Release Management": "======== NX-Enhanced Release Commands ========",
    "release": "nx run htwoo-core-styleguide:htwoo-release",
    "release:patch": "nx run htwoo-core-styleguide:htwoo-release:patch",
    "release:minor": "nx run htwoo-core-styleguide:htwoo-release:minor",
    "release:major": "nx run htwoo-core-styleguide:htwoo-release:major",
    "release:dry-run": "nx run htwoo-core-styleguide:htwoo-release:dry-run",
    "release:check": "nx run htwoo-core-styleguide:htwoo-release:check",
    "// React Release Management": "======== HTWoo React Release Commands ========",
    "release:react": "nx run htwoo-react:htwoo-release",
    "release:react:patch": "nx run htwoo-react:htwoo-release:patch",
    "release:react:minor": "nx run htwoo-react:htwoo-release:minor",
    "release:react:major": "nx run htwoo-react:htwoo-release:major",
    "release:react:dry-run": "nx run htwoo-react:htwoo-release:dry-run",
    "release:react:check": "nx run htwoo-react:htwoo-release:check",
    "// Version Management": "======== Version Sync & Management ========",
    "version:check": "nx run htwoo-core-styleguide:htwoo-version:check",
    "version:sync": "nx run htwoo-core-styleguide:htwoo-version:sync",
    "version:bump": "nx run htwoo-core-styleguide:htwoo-version:bump",
    "version:bump:minor": "nx run htwoo-core-styleguide:htwoo-version:bump:minor",
    "version:bump:major": "nx run htwoo-core-styleguide:htwoo-version:bump:major",
    "version:set": "nx run htwoo-core-styleguide:htwoo-version:set",
    "version:tag": "nx run htwoo-core-styleguide:htwoo-version:tag",
    "version:list-tags": "nx run htwoo-core-styleguide:htwoo-version:list-tags",
    "// React Version Management": "======== HTWoo React Version Commands ========",
    "version:react:check": "nx run htwoo-react:htwoo-version:check",
    "version:react:sync": "nx run htwoo-react:htwoo-version:sync",
    "version:react:bump": "nx run htwoo-react:htwoo-version:bump",
    "version:react:bump:minor": "nx run htwoo-react:htwoo-version:bump:minor",
    "version:react:bump:major": "nx run htwoo-react:htwoo-version:bump:major",
    "version:react:set": "nx run htwoo-react:htwoo-version:set",
    "version:react:tag": "nx run htwoo-react:htwoo-version:tag",
    "version:react:list-tags": "nx run htwoo-react:htwoo-version:list-tags",
    "// Changelog Management": "======== Changelog Generation ========",
    "changelog": "nx run htwoo-core-styleguide:htwoo-changelog",
    "changelog:preview": "nx run htwoo-core-styleguide:htwoo-changelog:preview",
    "changelog:react": "nx run htwoo-react:htwoo-changelog",
    "changelog:react:preview": "nx run htwoo-react:htwoo-changelog:preview",
    "// Development Workflows": "======== Development & Building ========",
    "launch:core": "nx run htwoo-core-styleguide:serve",
    "launch:react": "nx run htwoo-react:serve",
    "build:core": "nx run htwoo-core-styleguide:build",
    "build:react": "nx run htwoo-react:build",
    "build:all": "nx run-many -t build --parallel=2",
    "clean:all": "nx run-many -t clean --parallel=2",
    "validate:all": "nx run-many -t validate --parallel=2",
    "// Documentation Workflows": "======== Documentation Generation ========",
    "docs": "nx run docs:build",
    "docs:serve": "nx run docs:serve",
    "docs:build": "nx run docs:build",
    "docs:clean": "nx run docs:clean",
    "docs:validate": "nx run docs:validate",
    "docs:core": "nx run htwoo-core-styleguide:docs",
    "docs:core:serve": "nx run htwoo-core-styleguide:docs:serve",
    "docs:core:build": "nx run htwoo-core-styleguide:docs:build",
    "docs:core:publish": "nx run htwoo-core-styleguide:docs:publish",
    "docs:react": "nx run htwoo-react:docs",
    "docs:react:serve": "nx run htwoo-react:docs:serve",
    "docs:react:build": "nx run htwoo-react:docs:build",
    "docs:hugo:build": "nx run docs:hugo:build",
    "docs:hugo:serve": "nx run docs:hugo:serve",
    "// Commit & Git Workflows": "======== Conventional Commits & Git ========",
    "commit:check": "commitlint --from HEAD~1 --to HEAD",
    "commit:validate": "commitlint --edit",
    "commit:help": "echo 'Conventional Commit Format: <type>[scope]: <description>' && echo 'Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert'",
    "// Legacy Aliases": "======== Backward Compatibility ========",
    "launch:core:legacy": "nx run htwoo-core-styleguide:serve",
    "launch:react:legacy": "nx run htwoo-react:serve",
    "// Advanced Workflows": "======== Advanced Nx-Powered Workflows ========",
    "nx:status": "./scripts/nx-release.sh status",
    "nx:check": "./scripts/nx-release.sh check",
    "nx:plan": "./scripts/nx-release.sh plan",
    "nx:release": "./scripts/nx-release.sh release",
    "nx:release:patch": "./scripts/nx-release.sh release-patch",
    "nx:release:minor": "./scripts/nx-release.sh release-minor",
    "nx:release:major": "./scripts/nx-release.sh release-major",
    "nx:release:core": "./scripts/nx-release.sh release-core",
    "nx:release:react": "./scripts/nx-release.sh release-react",
    "nx:release:both": "./scripts/nx-release.sh release-both",
    "nx:dry-run": "./scripts/nx-release.sh dry-run",
    "nx:rollback": "./scripts/nx-release.sh rollback",
    "// Package-Specific Workflows": "======== Targeted Package Workflows ========",
    "nx:check:core": "./scripts/nx-release.sh check --package=core",
    "nx:check:react": "./scripts/nx-release.sh check --package=react",
    "nx:check:both": "./scripts/nx-release.sh check --package=both",
    "nx:plan:core": "./scripts/nx-release.sh plan --package=core",
    "nx:plan:react": "./scripts/nx-release.sh plan --package=react",
    "nx:plan:both": "./scripts/nx-release.sh plan --package=both",
    "// Core Package Synchronization": "======== hTWOo Core Package Management ========",
    "core:status": "node scripts/core-package-sync.js status",
    "core:check": "node scripts/core-package-sync.js check-sync",
    "core:plan": "node scripts/core-package-sync.js plan-sync",
    "core:sync": "node scripts/core-package-sync.js sync-core",
    "core:bump:patch": "node scripts/core-package-sync.js bump-core --type=patch",
    "core:bump:minor": "node scripts/core-package-sync.js bump-core --type=minor",
    "core:bump:major": "node scripts/core-package-sync.js bump-core --type=major",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^18.11.18",
    "husky": "^9.1.7",
    "nx": "^21.1.3",
    "typescript": "^5.1.6"
  }
}
