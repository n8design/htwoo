{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override for core package and testing
    "jsx": "react-jsx",
    "outDir": "lib",
    "rootDir": ".",
    "noEmit": false,
    
    // Test-specific types
    "types": ["vitest/globals", "node", "jsdom", "@testing-library/dom"],
    
    // Enable for Vitest
    "allowImportingTsExtensions": false,
    
    // Project reference settings
    "composite": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo"
  },
  
  "include": [
    "src/**/*",
    "test/**/*", 
    "*.ts",
    "vitest.config.ts",
    "index.d.ts"
  ],
  
  "exclude": [
    "node_modules", 
    "dist", 
    "lib/**/*.js",
    "legacy"
  ]
}
