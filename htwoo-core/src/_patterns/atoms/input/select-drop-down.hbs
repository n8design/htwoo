{{#select-options}}
<ul class="hoo-select-dropdown {{ this.ddToggleClass }}">
    {{#if this.useOptionsFrom }}
    {{#optionCategory this.useOptionsFrom }}
    {{#each this }}
    <li data-value="{{ this.key }}" class="hoo-option {{#if @first}}{{#if ../../../disableFirst}}is-disabled{{/if}}{{/if}} {{ this.disabled }}" 
       aria-disabled="{{#if @first}}{{#if ../../../disableFirst}}true{{else}}false{{/if}}{{else}}{{#if this.disabled}}true{{else}}false{{/if}}{{/if}}">
        {{ this.value }}
    </li>
    {{/each}}
    {{/optionCategory}}
    {{else if this.useGroupedOptions}}
    {{#with @root.select-options-grouped.options as |groups|}}
    {{#each groups }}
    <li class="hoo-optgroup">
        <div class="hoo-optgroup-name">{{ this.groupname }}</div>
        <ul class="hoo-optgroup-items">
            {{#if this.options}}
            {{#each this.options }}
            <li data-value="{{ this.key }}" class="hoo-option {{ this.disabled }}" 
               aria-disabled="{{#if this.disabled}}true{{else}}false{{/if}}">{{ this.value }}
            </li>
            {{/each}}
            {{/if}}
        </ul>
    </li>
    {{/each}}
    {{/with}}
    {{else}}
    {{#each options }}
    {{#if groupname }}
    <li class="hoo-optgroup">
        <div class="hoo-optgroup-name">{{ this.groupname }}</div>
        <ul class="hoo-optgroup-items">
            {{#each this.options }}
            {{#if this.disabled }}
            <li data-value="{{ this.key }}" class="hoo-option {{ this.disabled }}" aria-disabled="{{ disabled }}" >{{ this.value }}
            </li>
            {{ else }}
            <li data-value="{{ this.key }}" class="hoo-option" aria-disabled="false">{{ this.value }}</li>
            {{/if}}
            {{/each}}
        </ul>
    </li>
    {{ else }}
    <li data-value="{{ key }}" class="hoo-option {{ disabled }}">{{ value }}</li>
    {{/if}}
    {{/each }}
    {{/if}}
</ul>
{{/select-options}}

