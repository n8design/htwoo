{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      // Tells TypeScript to read JS files for declaration generation
      "allowJs": true,
      
      // Generate d.ts files only
      "declaration": true,
      "emitDeclarationOnly": true,
      
      // Output to the packages directory (monorepo-aware path)
      "outDir": "../packages/htwoo-core/lib/js/",
      "rootDir": "./src/js",
      
      // Relaxed settings for JS-to-TS conversion
      "strict": false,
      "skipLibCheck": true,
      
      // Module settings compatible with the monorepo
      "target": "ES2020",
      "module": "ESNext",
      
      // Project reference settings
      "composite": false,
      "tsBuildInfoFile": "./lib/.tsbuildinfo"
    },
    
    "include": ["src/js/**/*.js"],
    "exclude": [
      "src/js/vendor/**/*", 
      "src/js/prismjs/**/*", 
      "src/js/legacy/**/*", 
      "src/js/themeswitch/**/*"
    ],
    
    // No references since this is just declaration generation
    "references": []
  }
  