{
  "name": "@n8d/htwoo-core-styleguide",
  "version": "2.7.3",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "--- /// Pattern Lab Commands /// ---": "",
    "pl:build": "patternlab build --config ./patternlab-config.json",
    "pl:help": "patternlab --help",
    "pl:install": "patternlab install --config ./patternlab-config.json",
    "pl:serve": "patternlab serve --config ./patternlab-config.json",
    "pl:publish": "patternlab build --config ./patternlab-config.json",
    "pl:publish-docs": "patternlab build --config ./patternlab-public.json",
    "pl:version": "patternlab --version",
    "--- /// Ice Commands /// ---": "",
    "ice:build": "ice-build watch --config ./ice.config.js",
    "ice:watch": "ice-build watch --config ./ice.config.js",
    "ice:docs": "ice-build build --config ./ice.config.js",
    "ts:compile": "tsc --project tsconfig.json",
    "ts:watch": "tsc --project tsconfig.json --watch",
    "--- /// NodeJS script /// ---": "",
    "prestart": "npx shx mkdir -p public/plugins/ && npx shx cp -r src/plugins/plugin-design/ public/plugins/ && npx shx cp -r src/styleguide/images/ public/styleguide/",
    "start": "npm-run-all --parallel ice:watch ts:watch pl:serve",
    "start:basic": "npm-run-all --parallel ice:watch pl:serve",
    "--- /// Package Build Commands /// ---": "",
    "clean:package": "shx rm -rf ../packages/htwoo-core/lib ../packages/htwoo-core/dist",
    "build:css-prod": "ice-build build",
    "copy:css": "shx mkdir -p ../packages/htwoo-core/dist/css && shx cp -r public/css/htwoo.min.css ../packages/htwoo-core/dist/css/",
    "copy:scss": "shx mkdir -p ../packages/htwoo-core/lib/sass && shx cp -r src/styles/* ../packages/htwoo-core/lib/sass/ && shx rm -rf ../packages/htwoo-core/lib/sass/00-base/fonts",
    "copy:components": "shx mkdir -p ../packages/htwoo-core/lib/components && shx cp -r src/components/* ../packages/htwoo-core/lib/components/",
    "copy:js": "shx mkdir -p ../packages/htwoo-core/lib/js && shx cp -r src/js/* ../packages/htwoo-core/lib/js/",
    "copy:ts": "shx mkdir -p ../packages/htwoo-core/lib/ts && shx cp -r src/ts/* ../packages/htwoo-core/lib/ts/",
    "build:js": "rollup -c rollup.config.mjs && tsc --project tsconfig.package.json",
    "build:typings": "bash ./enhanced-typings.sh",
    "copy:docs": "shx cp -r LICENSE README.md ../packages/htwoo-core/",
    "build:package": "npm-run-all clean:package build:css-prod copy:css copy:scss copy:components copy:js copy:ts build:js build:typings copy:docs",
    "build:optimized": "bash ./asset-pipeline.sh",
    "validate:package": "node -e \"require('./validate-package.js')\"",
    "--- /// Changelog Commands /// ---": "",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --config ./changelog.config.js",
    "changelog:htwoo-core": "node ./scripts/generate-changelog.js",
    "--- /// Version Sync Commands /// ---": "",
    "htwoo-version:check": "node ./scripts/sync-versions.js check",
    "htwoo-version:sync": "node ./scripts/sync-versions.js sync",
    "htwoo-version:bump": "node ./scripts/sync-versions.js bump",
    "htwoo-version:bump:minor": "node ./scripts/sync-versions.js bump minor",
    "htwoo-version:bump:major": "node ./scripts/sync-versions.js bump major",
    "htwoo-version:set": "node ./scripts/sync-versions.js set",
    "htwoo-version:tag": "node ./scripts/sync-versions.js tag",
    "htwoo-version:list-tags": "node ./scripts/sync-versions.js list-tags",
    "--- /// Release Commands /// ---": "",
    "--- /// Accessibility Testing /// ---": "",
    "test:a11y": "npm run test:a11y:with-server",
    "test:a11y:all": "echo '⚠️  Make sure Pattern Lab server is running (npm run pl:serve) before running accessibility tests!' && A11Y_TEST_MODE=all npx playwright test tests/playwright/comprehensive-a11y.spec.ts --config tests/playwright/playwright.config.ts",
    "test:a11y:sample": "echo '⚠️  Make sure Pattern Lab server is running (npm run pl:serve) before running accessibility tests!' && A11Y_TEST_MODE=sample npx playwright test tests/playwright/comprehensive-a11y.spec.ts --config tests/playwright/playwright.config.ts",
    "test:a11y:with-server": "npm-run-all --parallel --race test:a11y:serve test:a11y:run-all",
    "test:a11y:sample:with-server": "npm-run-all --parallel --race test:a11y:serve test:a11y:run-sample",
    "test:a11y:serve": "npm run pl:serve",
    "test:a11y:run-all": "npx wait-on http://127.0.0.1:3000 --timeout 30000 && npm run test:a11y:all",
    "test:a11y:run-sample": "npx wait-on http://127.0.0.1:3000 --timeout 30000 && npm run test:a11y:sample",
    "test:a11y:demo": "npx playwright test tests/playwright/demo-a11y.spec.ts --config tests/playwright/playwright.config.ts",
    "view:a11y": "npm run view:a11y:results",
    "view:a11y:results": "open test-results/index.html || xdg-open test-results/index.html || start test-results/index.html",
    "--- /// Unit Testing with Vitest /// ---": "",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "--- /// Component E2E Testing /// ---": "",
    "test:e2e:components": "npx playwright test tests/playwright/component-tests/",
    "test:e2e:components:ui": "npx playwright test tests/playwright/component-tests/ --ui",
    "test:e2e:components:with-server": "npm-run-all --parallel --race pl:serve test:e2e:components:run",
    "test:e2e:components:run": "npx wait-on http://127.0.0.1:3000 --timeout 30000 && npm run test:e2e:components",
    "htwoo-release": "node ./scripts/release.js release",
    "htwoo-release:patch": "node ./scripts/release.js release --bump patch",
    "htwoo-release:minor": "node ./scripts/release.js release --bump minor",
    "htwoo-release:major": "node ./scripts/release.js release --bump major",
    "htwoo-release:dry-run": "node ./scripts/release.js release --bump patch --dry-run",
    "htwoo-release:check": "node ./scripts/release.js check",
    "htwoo-release:test": "node ./scripts/release.js test",
    "htwoo-release:build": "node ./scripts/release.js build",
    "htwoo-release:legacy": "standard-version --config ./changelog.config.js",
    "htwoo-release:legacy:dry-run": "standard-version --config ./changelog.config.js --dry-run"
  },
  "keywords": [],
  "author": "Stefan Bauer (@stfbauer)",
  "homepage": "https://lab.n8d.studio/htwoo/htwoo-core/",
  "bugs": {
    "url": "https://github.com/n8design/htwoo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n8design/htwoo"
  },
  "license": "MIT",
  "files": [
    "lib"
  ],
  "browserslist": [
    ">0.5%",
    "last 3 years",
    "supports css-grid",
    "not dead"
  ],
  "dependencies": {
    "@pattern-lab/cli": "^6.1.0",
    "@pattern-lab/core": "^6.1.0",
    "@pattern-lab/engine-handlebars": "^6.1.0",
    "@pattern-lab/uikit-workshop": "^6.1.0",
    "caniuse-lite": "^1.0.30001757",
    "standard-version": "^9.5.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@n8d/ice-build": "^0.7.0",
    "@n8d/ice-hotreloader": "^0.1.0",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-json": "^6.1.0",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "axe-html-reporter": "^2.2.11",
    "conventional-changelog-cli": "^5.0.0",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.57.0",
    "plugin-design": "file:helpers/node/plugin-design",
    "postcss": "^8.5.6",
    "rollup": "^4.53.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.94.2",
    "serve-static": "^2.2.0",
    "shx": "^0.4.0",
    "sitemap": "^9.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14",
    "yargs": "^18.0.0"
  }
}
