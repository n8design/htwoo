{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Override specific settings for React
    "jsx": "react",
    "outDir": "lib",
    "rootDir": "src",
    "removeComments": true,
    
    // React-specific libraries
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": ["react", "react-dom"],
    
    // Ensure compatibility with React ecosystem
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    // Project reference settings
    "composite": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo"
  },
  
  "include": [
    "src/**/*"
  ],
  
  "exclude": [
    "node_modules",
    "lib",
    "**/*.test.*",
    "**/__tests__/**",
    "**/*.stories.*"
  ],
  
  // Reference dependencies
  "references": [
    { "path": "../packages/htwoo-core" }
  ]
}