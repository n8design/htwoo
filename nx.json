{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "typecheck": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "build-storybook": {
      "dependsOn": ["build"],
      "cache": true
    },
    "docs": {
      "dependsOn": ["build"],
      "cache": true
    },
    "docs:serve": {
      "cache": false
    },
    "docs:build": {
      "dependsOn": ["build"],
      "cache": true
    },
    "changelog": {
      "cache": false
    },
    "release": {
      "dependsOn": ["build", "test"],
      "cache": false
    },
    "htwoo-release": {
      "dependsOn": ["build", "test", "validate"],
      "cache": false
    },
    "htwoo-release:patch": {
      "dependsOn": ["build", "test", "validate"],
      "cache": false
    },
    "htwoo-release:minor": {
      "dependsOn": ["build", "test", "validate"],
      "cache": false
    },
    "htwoo-release:major": {
      "dependsOn": ["build", "test", "validate"],
      "cache": false
    },
    "htwoo-release:dry-run": {
      "dependsOn": ["build", "test", "validate"],
      "cache": false
    },
    "htwoo-version:bump": {
      "dependsOn": ["build", "test"],
      "cache": false
    },
    "htwoo-version:bump:minor": {
      "dependsOn": ["build", "test"],
      "cache": false
    },
    "htwoo-version:bump:major": {
      "dependsOn": ["build", "test"],
      "cache": false
    },
    "htwoo-version:set": {
      "dependsOn": ["build", "test"],
      "cache": false
    },
    "validate": {
      "cache": true
    },
    "clean": {
      "cache": false
    }
  },
  "release": {
    "projects": ["htwoo-core"],
    "changelog": {
      "workspaceChangelog": false,
      "projectChangelogs": {
        "htwoo-core": {
          "file": "htwoo-core/CHANGELOG.md",
          "createRelease": "github"
        }
      }
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json"
    ],
    "sharedGlobals": []
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint", "typecheck", "validate", "docs", "docs:build", "build-storybook"]
      }
    }
  }
}
